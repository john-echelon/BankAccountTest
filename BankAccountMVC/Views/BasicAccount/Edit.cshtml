@model BankAccountDB.Concrete.Entities.BasicAccount

<h2>@ViewBag.Title</h2>
@Html.ValidationSummary(false, "Please ensure all fields are valid.")
@using (Html.BeginForm("Edit", "BasicAccount", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <input id="UserProfileID" type="hidden" value="@Model.UserProfileID" name="UserProfileID" data-val-required="The UserProfileID field is required." data-val-number="The field UserProfileID must be a number." data-val="true">
    <input id="" type="hidden" value="@Model.BasicAccountID" name="BasicAccountID" data-val-required="The BasicAccountID field is required." data-val-number="The field BasicAccountID must be a number." data-val="true">
    <div class="form-group">
        <label for="AccountBalance" class="col-sm-2 control-label">Balance</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Balance, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="AccountBalance" class="col-sm-2 control-label">Interest Rate</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.InterestRate, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="AccountBalance" class="col-sm-2 control-label">Status Of Account</label>
        <div class="col-sm-10">
            @Html.EditorFor(m => m.StatusOfAccount, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="AccountType" class="col-sm-2 control-label">Account Type</label>
        <div class="col-sm-10">
            @Html.EditorFor(m => m.AccountType, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="">
            <input type="submit" value="Save Changes" class="btn btn-default" />
        </div>
    </div>
}