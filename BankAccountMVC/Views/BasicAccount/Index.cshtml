@model BankAccountDB.Concrete.Entities.UserProfile
@{
    ViewBag.Title = "Index";
}

<h2>@Html.LabelForModel()</h2>
<div class="form-group">
     <label for="AccountUser">User Name: </label>
     @Html.DisplayFor(m => m.UserName, new { @class = "" })
</div>
<table class="table table-hover">
    <tr>
        <th>
            Account ID
        </th>
        <th>
            Balance
        </th>
        <th>
            Interest Rate
        </th>
        <th>
            Account Type
        </th>
        <th>
            Account Status
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.Accounts)
    {
        <tr>
            <td>
                @Html.ActionLink(item.BasicAccountID.ToString(), "Edit", new { id = item.BasicAccountID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterestRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusOfAccount)
            </td>
            <td>
                @Html.ActionLink("Remove", "Delete", new { id = item.BasicAccountID }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Create Account", "Create", null, new { @class= "btn btn-default" })
